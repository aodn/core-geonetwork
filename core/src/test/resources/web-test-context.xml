<?xml version="1.0" encoding="UTF-8"?>
<beans default-lazy-init="true" xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gns="http://www.fao.org/geonetwork/spring"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
http://www.fao.org/geonetwork/spring http://www.fao.org/geonetwork/spring/gn-spring.xsd">

    <bean id="translatorFactory" class="org.fao.geonet.kernel.search.TranslatorFactory"/>

    <bean id="luceneConfig" class="org.fao.geonet.kernel.search.LuceneConfig" lazy-init="true">
        <constructor-arg ref="facets"/>
        <constructor-arg ref="summaryTypes"/>
    </bean>

    <bean id="keywordSplitter" class="org.fao.geonet.kernel.search.classifier.Split">
        <constructor-arg name="regex" value="-| *\| *"/>
    </bean>

    <gns:facets>
        <gns:facet name="keywordToken" indexKey="keyword" label="Keyword Tokens" classifier="keywordSplitter"/>
    </gns:facets>

    <gns:summaryTypes>
        <gns:summaryType name="keyword_token">
            <gns:item facet="keywordToken" max="100" format="DIMENSION"/>
        </gns:summaryType>
    </gns:summaryTypes>

</beans>
